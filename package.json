    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^11.1.0",
    "puppeteer": "^24.4.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-copy": "^3.5.0",
    "standard": "^17.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-banner": "^0.8.0",
    "vite-plugin-dts": "^4.5.3"
  }
